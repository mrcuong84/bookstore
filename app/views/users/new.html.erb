<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1><%= t('.sign_up') %></h1>
    <%= form_for(@user, html: {class: 'form-group'} ) do |f| %>
      <%= render partial: 'shared/error_messages', locals: {object: @user} %>
      <div class="form-group">
        <%= f.label t('users.name') %><span class = "required"><i><b>*</b></i></span>
        <%= f.text_field :name, class: 'form-control', maxlength: 20, size: 50, onchange: "trimString(0)", required: true %>
      </div>
      <div class="form-group">
        <%= f.label t('.phone') %><span class = "required"><i><b>*</b></i></span>&nbsp;<i><%= t('.input_guide_phone') %></i>
        <%= f.phone_field :phone, class: 'form-control', maxlength: 10, size: 10, onchange: "trimString(1)", required: true, title: "please fulfill 10 digits" %>
      </div>
      <div class="form-group">
        <%= f.label t('users.address') %><span class = "required"><i><b>*</b></i></span>
        <%= f.text_field :address, class: 'form-control', maxlength: 50, size: 50, onchange: "trimString(2)", required: true %>
      </div>
      <div class="form-group">
        <%= f.label t('users.password') %><span class = "required"><i><b>*</b></i></span>&nbsp;<i><span><%= t('.input_guide_password') %><span></i>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, t('.password_confirmation') %><span class = "required"><i><b>*</b></i></span>
        <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <label><%= t('.avatar') %></label> <span><i><%= t('.avatar_format') %><span></i>
        <span class = "picture">
          <%= f.file_field :avatar %>
        </span>
      </div>
      <div class="form-check text-center">
        <%= f.submit t('.create_my_account'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
