<div class="row">
  <% books.each do |book| %>
    <%= link_to book_path book do %>
      <div class="col-sm-6">
        <div class="col-sm-12 book-col">
          <div class="col-sm-3">
            <img src= "<%= book.images.first&.thumb_url %>" alt= "Book's cover" class="book-cover">
          </div>
          <div class="col-sm-9">
            <h4><span title="<%= book.name %>"><%= truncate(book.name, length: 40) %></span></h4>
            <p><%= t('books.seller_name', seller_name: book.seller_name) %></p>
            <p><%= t('books.quantity', quantity: book.quantity) %></p>
            <p><%= t('books.price', price: book.price) %></p>
            <div class="row text-center">
            <li class="btn btn-primary"><%= link_to t('.update'), edit_book_path(book) %></li>
            <li class="btn btn-primary"><%= link_to t('.remove_book'), book_url(book), method: :delete, data: { confirm: t('.confirm_delete') }  %></li>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="row text-center">
  <%= paginate books %>
</div>
